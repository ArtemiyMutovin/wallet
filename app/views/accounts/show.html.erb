
<div>
  <h2><%= link_to "Open new credits", new_credit_path(@account) %></h2>
</div>

<div>
  <h2><%= link_to "Send money to other client", new_transfer_path(@account) %></h2>
</div>

<div class="account">
<h2>Account number:  <%= current_user.account.number %></h2>
<h2>Your balance:  <%= current_user.account.balance %></h2>
</div>

<div>
  <table class="credits">
    <caption>Client credits</caption>
    <tr>
      <td>CREDIT ID</td>
      <td>CREDIT AMOUNT</td>
      <td>ACTIVE CREDIT</td>
    </tr>
    <%= render @credits %>
  </table>
</div>

<div>
  <table class="transfers">
    <caption>Client transfers</caption>
    <tr>
      <td>TRANSFER ID</td>
      <td>TRANSFER AMOUNT</td>
      <td>SENDER</td>
      <td>RECEIVER</td>
      <td>DATA</td>
    </tr>
    <%= render @transfers %>
  </table>
</div>



